{
    "name": "bot",
    "version": "1.0.0",
    "private": true,
    "type": "module",
    "scripts": {
        "lint": "eslint . --max-warnings 0",
        "format": "prettier --write \"**/*.{ts,tsx,md}\"",
        "build": "esbuild src/index.ts --bundle --platform=node --target=node18 --outfile=dist/bundle.cjs --sourcemap --minify --external:discord.js --external:@libsql/client --external:deasync",
        "dev": "npm run build && DEV=1 node --enable-source-maps index.cjs",
        "start": "node --enable-source-maps index.cjs",
        "db:generate-migrations": "drizzle-kit generate:sqlite",
        "db:migrate": "npm run build && DB_MIGRATE=1 node --enable-source-maps index.cjs",
        "commands:migrate": "npm run build && CMD_MIGRATE=1 node --enable-source-maps index.cjs"
    },
    "devDependencies": {
        "@repo/eslint-config": "*",
        "@repo/typescript-config": "*",
        "@types/eslint": "^8.44.7",
        "esbuild": "0.19.11",
        "eslint": "^8.53.0",
        "typescript": "^5.2.2"
    },
    "dependencies": {
        "@libsql/client": "^0.4.0-pre.7",
        "color-parse": "^2.0.0",
        "discord.js": "^14.14.1",
        "dotenv": "^16.3.1",
        "drizzle-orm": "^0.29.3",
        "pureimage": "^0.4.13",
        "reacord": "^0.6.0",
        "react": "^18.2.0",
        "yahoo-finance2": "^2.9.0"
    },
    "optionalDependencies": {
        "@libsql/linux-x64-gnu": "^0.2.0-pre.7"
    }
}
